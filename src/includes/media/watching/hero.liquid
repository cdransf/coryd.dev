<a href="{{ movie.url }}">
  <div class="watching hero">
    <div class="meta-text highlight-text">
      <div class="header">{{ movie.title }}</div>
      <div class="subheader">
        {%- if movie.rating -%}
          <span class="rating">{{ movie.rating }} </span>
        {%- endif -%}
        ({{ movie.year }})
      </div>
    </div>
    {% render "blocks/hero.liquid",
      globals:globals,
      image:movie.backdrop,
      alt:movie.title
    %}
  </div>
</a>
